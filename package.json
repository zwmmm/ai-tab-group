{
  "name": "ai-tab-group",
  "displayName": "AI 标签分组助手",
  "version": "0.1.0",
  "description": "使用 AI 大模型自动给 Tab 标签分组，支持自定义分组规则",
  "author": "三一",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/webextension-polyfill": "^0.12.3",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "tabs",
      "storage",
      "tabGroups"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "esbuild",
      "lmdb",
      "lmdb",
      "msgpackr-extract",
      "msgpackr-extract",
      "sharp",
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "@swc/core"
    ]
  }
}